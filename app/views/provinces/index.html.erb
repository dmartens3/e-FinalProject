<div class="w-full m-5">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Provinces</h1>
    <%= # link_to "New province", new_province_path, class: "rounded-lg mr-10 py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div>
    <table class="text-left">
      <thead>
        <tr class="bg-green-200">
          <th class="p-2">Name:</th>
          <th class="p-2">Code:</th>
          <th class="p-2">GST:</th>
          <th class="p-2">PST:</th>
          <th class="p-2">HST:</th>
        </tr>
      </thead>
      <tbody>
        <% @provinces.each do |province| %>
        <tr class="even:bg-blue-100 hover:bg-gray-200">
          <td class="p-2"><%= link_to province.name, edit_province_path(province) %></td>
          <td class="p-2"><%= link_to province.code, edit_province_path(province) %></td>
          <td class="p-2"><%= link_to province.gst, edit_province_path(province) %></td>
          <td class="p-2"><%= link_to province.pst, edit_province_path(province) %></td>
          <td class="p-2"><%= link_to province.hst, edit_province_path(province) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
